        </div>

        <div class="row gap-y">
            <div class="col-md-8 mx-auto">
                {% for alert in alerts.bootstrap -%}
                    <div class="alert alert-{{ alert }} alert-outline" role="alert">
                        A simple {{ alert }} alertâ€”check it out!
                    </div>
                {%- endfor %}
            </div>
        </div>
    </div>
</section>
